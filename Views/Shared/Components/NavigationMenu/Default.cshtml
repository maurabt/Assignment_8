@model IEnumerable<string>

<!--universal navigation for the left side of the page-->

<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home"
   asp-route-category="">
    Home
</a>

@foreach (string category in Model)
{
    @if (String.IsNullOrEmpty(category)) { }
    else
    {
        <!--home button and button for each category-->
        <a class="btn btn-block @(category == ViewBag.SelectedType ? "btn-primary" : "btn-outline-secondary")"
           asp-action="Index" asp-controller="Home"
           asp-route-category="@category" asp-route-pageNum="1">
            @category
        </a>
    }
}
